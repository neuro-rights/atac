[flake8]
ignore = E203, E266, E501, W503, F403, F401, F841, E722, C901
max-line-length = 80
max-complexity = 18
select = B,C,E,F,W,T4,B9
exclude =
    # No need to traverse our git directory
    .git, .github, .gitmodules
    # There's no value in checking cache directories
    __pytest_cache__,
    #
    data, env, log